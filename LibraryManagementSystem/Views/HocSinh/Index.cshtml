@model IEnumerable<LibraryManagementSystem.Models.HocSinh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Học Sinh</h2>
<div>
    <div>
        <a href="HocSinh/Create" class="btn btn-primary active" role="button">Tạo Mới</a>
    </div>
    @using (Html.BeginForm("Index", "HocSinh", FormMethod.Get))
    {
        <p>
            <div class="form-group">
                <label for="tenHS"></label>
                <input id="tenHS" name="tenHS" type="text" class="form-control" placeholder="Tìm Học Sinh">
            </div>
            <div class="form-group">
                <label for="lopHS"></label>
                <input id="lopHS" name="lopHS" type="text" class="form-control" placeholder="Tìm Lớp">
            </div>
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
        </p>
    }
</div>
<table class="table table-hover">
    <tr>
        <th>
            @Html.ActionLink("Tên học sinh", "Index", new { sortOrder = ViewBag.sorTen })
        </th>
        <th>
            @Html.ActionLink("Lớp", "Index", new { sortOrder = ViewBag.sortLop })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenHS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
