@model IEnumerable<LibraryManagementSystem.Models.ChuDe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2>Danh Sách Chủ Đề</h2>
</div>
<br />
<div class="row">
    <div class="col-md-8">

    </div>
    <div class="col-md-4 text-right">
        <div>
            <a href="/ChuDe/Create" class="btn btn-primary active" role="button">Tạo Mới</a>
        </div>
    </div>
</div>
<br />
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                Mã chủ đề
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenChuDe)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenChuDe)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>