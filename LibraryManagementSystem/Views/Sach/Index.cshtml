@model IEnumerable<LibraryManagementSystem.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2>Danh sách Sách trong thư viện</h2>
</div>
<br />
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm())
            {
            <div class="form-inline" role="form">
                <div class="form-group">
                    @Html.DropDownList("chuDeSach", null, "Chủ Đề", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input id="sachID" name="sachID" type="text" class="form-control" placeholder="Tìm Mã Sách">
                </div>
                <div class="form-group">
                    <input id="tenSach" name="tenSach" type="text" class="form-control" placeholder="Tìm Tên Sách">
                </div>
                <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        }

    </div>
    <div class="col-md-4 text-right">
        <div>
            <a href="Sach/Create" class="btn btn-primary active" role="button">Thêm một sách</a>
            <a href="Sach/ThemSachTuFile" class="btn btn-primary active" role="button">Thêm nhiều sách</a>
        </div>
    </div>
</div>

<br />
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Tên chủ đề", "Index", new { sortOrder = ViewBag.sortChuDe })
            </th>
            <th>
                @Html.ActionLink("Mã số sách", "Index", new { sortOrder = ViewBag.sortID })
            </th>
            <th>
                @Html.ActionLink("Tên sách", "Index", new { sortOrder = ViewBag.sorTen })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ChuDe.TenChuDe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SachID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>