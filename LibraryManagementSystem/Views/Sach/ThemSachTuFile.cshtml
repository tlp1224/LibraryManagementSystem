@model System.Data.DataTable
@using System.Data;
@{
    ViewBag.Title = "ThemSachTuFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm sách từ file</h2>

@using (Html.BeginForm("ThemSachTuFile", "Sach", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
        <input type="file" id="dataFile" name="upload" />
    </div>

    <div class="form-group">
        <input type="submit" value="Tải lên và Lưu" class="btn btn-default" />
    </div>

    

}
