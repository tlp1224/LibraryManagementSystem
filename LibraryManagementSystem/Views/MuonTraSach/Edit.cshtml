@model LibraryManagementSystem.Models.MuonTraSach

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Trả sách</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Xác nhận thông tin của học sinh trả sách</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
           @Html.Label("tenHS_list", "Tên học sinh", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Hoc_SinhID", null, htmlAttributes: new { @id = "dropHSID", @class = "form-control"})
                @Html.ValidationMessageFor(model => model.HocSinhID, "", new { @class = "text-danger" })
                @Html.TextBox("HS_TraSach",null , new { @id = "txtHS_TraSach" , @hidden="hidden"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("tenSach_list", "Tên sách", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SachID", null, htmlAttributes: new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.SachID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NgayMuon, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("ngaymuon", Model.NgayMuon.ToString(), new { @id = "_fakeNgayMuon", @hidden = "hidden" })
                @Html.TextBoxFor(model => model.NgayMuon, new { @id = "txtNgayMuon", @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.NgayMuon, "", new { @class = "text-danger" })
                
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.HanTra, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("hantra", Model.HanTra.ToString(), new { @id = "_fakeHanTra", @hidden = "hidden" })
                @Html.TextBoxFor(model => model.HanTra, new { @id = "txtHanTra", @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.HanTra, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NgayTra, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("ngaytra", DateTime.Now.ToShortDateString().ToString(), new { @id = "_fakeNgayTra", @hidden = "hidden" })
                @Html.TextBoxFor(model => model.NgayTra, new { @id = "txtNgayTra", @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.NgayTra, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" hidden="hidden">
            @Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TrangThai, new { @id = "txtTrangThai", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xác nhận" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            {
                var ngaymuon = $("#_fakeNgayMuon").val();
                var hantra = $("#_fakeHanTra").val();
                var ngaytra = $("#_fakeNgayTra").val();
                var selectedHS = $("#dropHSID option:selected").text();

                $("#txtHS_TraSach").val(selectedHS);
                $("#txtNgayMuon").val(ngaymuon);
                $("#txtHanTra").val(hantra);
                $("#txtNgayTra").val(ngaytra);
                $("#txtTrangThai").val(true);
            }
        });
    </script>
}